#! /bin/sh

# Check if this is the right reason and interface for us

if [ "$reason" != "BOUND" ] && [ "$reason" != "RENEW" ] \
	&& [ "$reason" != "REBIND" ] || [ "$interface" != "eth0" ]
then
        echo "Easyfind: nothing todo."
else
        # Update easyfind db
        echo "Launching easyfind update script"
        /opt/bubba/bin/easyfind.pl
fi
